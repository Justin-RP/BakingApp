<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/nav_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ba_cake_card_reveal_height"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="?attr/colorPrimaryDark"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.CardView
        android:id="@+id/nav_ingredientsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nav_image"
        android:layout_alignTop="@+id/nav_image"
        android:layout_alignEnd="@+id/nav_image"
        android:layout_alignBottom="@+id/nav_image"
        android:layout_marginStart="@dimen/ba_grid_spacing"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="@dimen/ba_grid_spacing"
        android:layout_marginBottom="13dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Ingredients"
            android:layout_marginLeft="@dimen/ba_ingredient_card_title_margin"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="@dimen/ba_title_size" />

        <ImageView
            android:id="@+id/nav_widgetStar"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/nostar" />

    </android.support.v7.widget.CardView>


</RelativeLayout>