<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nav_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ba_title_size"
            tools:text="Step Name"
            android:paddingTop="@dimen/ba_detail_card_title_padding"
            android:paddingLeft="@dimen/ba_detail_card_title_padding"
            android:textAppearance="?attr/textAppearanceHeadline6"
            />

        <TextView
            android:id="@+id/nav_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            tools:text="Step 1"
            android:paddingBottom="@dimen/ba_detail_card_title_padding"
            android:paddingLeft="@dimen/ba_detail_card_title_padding"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/colorLightText" />




    </LinearLayout>



</android.support.design.card.MaterialCardView>